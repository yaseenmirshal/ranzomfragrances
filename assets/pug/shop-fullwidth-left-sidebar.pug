extends base/layout.pug
block title
  title Shop Full Width Left Sidebar
  -var isWideContainer = true;
block header
  include components/header/menu/menu-five.pug
block content
  +breadcrumb({title: 'Shop', children: '<li>Home</li><li class="active">Shop</li>'})
  .shop
    .container-full-half
      .row
        .col-12.col-md-4.col-lg-3.col-xl-2
          include components/shop/shop-sidebar.pug
        .col-12.col-md-8.col-lg-9.col-xl-10
          include components/shop/shop-header.pug
          .shop-products
            .shop-products__gird
              .row.mx-n1.mx-xl-n3
                each item in PRODUCTS.slice(0,12)
                  .col-6.col-lg-4.col-xl-3.px-1.px-xl-3
                    +product({data: item})
            .shop-products__list
              .row.mx-n1.mx-xl-n3
                each item in PRODUCTS.slice(0,12)
                  .col-12.col-xl-6.px-1.px-xl-3
                    +product({data: item, type: 'list'})
          include components/other/paginator.pug
  include components/footer/footer-one.pug