include ../../../mixins/section-title.pug
include ../../../mixins/product.pug
include ../../../mixins/button.pug
include ../../../base/variable.pug
.product-slide
  .container
    +sectionTitle({title: 'Beauty Products', classname: '-center'})
    .product-slider
      .product-slide__wrapper
        each item in PRODUCTS.slice(0, 8)
          .product-slide__item
            +product({data: item})
      .text-center
        +button({href: 'shop-fullwidth-4col.html', classname: '-transparent -underline', content: 'View all product'})
